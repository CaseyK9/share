<!doctype html>
<html class="h-100" lang="en">

<head>
  <title>
    <%= pageTitle %> | <%= siteTitle %>
  </title>
  <!-- Basic Meta -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Frameworks -->
  <!-- Font Awsome-->
  <link rel="stylesheet" type="text/css" href="/assets/vender/font-awesome/css/all.min.css">
  <!--Bootstrap -->
  <link rel="stylesheet" type="text/css" href="/assets/vender/bootstrap/css/bootstrap.min.css">
  <!-- Custom -->
  <link rel="stylesheet" type="text/css" href="/assets/css/main.css">
</head>
<body class="auth mb-0">
  <div class="form-auth">
    <a href="/"><img class="mx-auto d-block mb-4" src="/assets/images/logo_text.png" width="320"></a>
   <% errors = error && error.length > 0 %>
    <% if (errors && error[0].alreadyAccount){ %>
    <div class="alert alert-danger" role="alert">
      <%= error[0].alreadyAccount %>
    </div>
    <% } %>
    <% if (success && success.length > 0){ %>
    <div class="alert alert-success" role="alert">
      <%= success %>
    </div>
    <% } %>

    <form action="/signup" method="POST" novalidate>
      <input type="hidden" name="_csrf" value="<%= _csrf %>" />
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" name="username"
          class="form-control <% if( errors && error[0].username){ %>is-invalid <% } %>" id="username"
          placeholder="Example">
        <% if (errors && error[0].username) { %>
        <small class="invalid-feedback">
          <%= error[0].username %>
        </small>
        <% } %>
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email"
          class="form-control <% if(error && error.length > 0 && error[0].email){ %>is-invalid <% } %>" id="email"
          placeholder="youremail@example.com">
        <% if (errors && error[0].email) { %>
        <small class="invalid-feedback">
          <%= error[0].email %>
        </small>
        <% } %>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password"
          class="form-control <% if(errors && error[0].password){ %>is-invalid <% } %>" id="password">
        <% if (errors && error[0].password) { %>
        <small class="invalid-feedback">
          <%= error[0].password %>
        </small>
        <% } %>
      </div>
      <button type="submit" class="btn btn-signup btn-primary btn-block">Signup</button>
    </form>
    <div class="info">
      <a href="/user/forgot-password">
        <small class=" info text">Forgot your password?</small>
      </a>
      <a href="/user/activate/resend">
        <small class=" info text">Resend activation token</small>
      </a>
      <a href="/login">
        <small class="info text">Already have a account?</small>
      </a>
    </div>
  </div>
</body>
<% include ../partials/footer %>
