<div class="mt-3 pl-0 pr-0">
  <div
    class="alert alert-danger collapse alert-timeout"
    role="alert"
    id="error"
  ></div>
  <div
    class="alert alert-success collapse alert-timeout"
    role="alert"
    id="success"
  ></div>
  <%- include ('../streamerMode') %>
</div>
<div class="customTable">
  <div class="table-wrapper">
    <div class="table-title">
      <div class="row">
        <div class="col-xs-12 col-md-6">
          <h2>Manage <strong>Users</strong></h2>
        </div>
        <div class="col-xs-12 col-md-6"></div>
      </div>
    </div>
  </div>
  <table
    id="table"
    data-toggle="table"
    data-pagination="true"
    data-id-field="id"
    data-side-pagination="server"
    data-url="/admin/users-data"
    data-sort-order="desc"
    data-page-size="10"
    data-page-list="[10, 25, 50, 100, all]"
  >
    <thead>
      <tr>
        <!-- <th data-field="name" scope="col">Name</th> -->
        <th
          data-field="username"
          data-formatter="usernameFormatter"
          data-searchable="false"
          scope="col"
        >
          Username
        </th>
        <th data-field="role" data-formatter="roleFormatter" scope="col">
          Role
        </th>
        <th
          data-field="createdAt"
          data-formatter="createdAtFormatter"
          data-sortable="true"
          scope="col"
        >
          Created At
        </th>
        <th
          data-field="actions"
          data-formatter="actionsFormatter"
          data-events="actionEvents"
          scope="col"
          data-width="100px"
        >
          Actions
        </th>
      </tr>
    </thead>
  </table>
  <script>
    $(document).ready(() => {
      $('#table').bootstrapTable({
        formatNoMatches: function() {
          return 'No users found.';
        }
      });
    });
    var $table = $('#table');

    // Data formatters
    function usernameFormatter(value, row) {
      return `<a href="/admin/users/${row.slug}" target="_blank">${value}</a>`;
    }
    function createdAtFormatter(value, row) {
      return moment(value).fromNow();
    }
    function roleFormatter(value, row) {
      switch (value) {
        case 'owner':
          return 'Owner';
        case 'admin':
          return 'Admin';
        default:
          if (row.isVerified === true) {
            return 'Verified User';
          }
          return 'User';
      }
    }
    function actionsFormatter(value, row, index) {
      return [
        `<a class="edit" href="/admin/users/edit/${row.slug}" title="Edit User">`,
        '<i class="fas fa-edit"></i>',
        '</a> ',
        '<a class="delete" href="javascript:void(0)" title="Delete User">',
        ' <i class="fas fa-times-circle"></i>',
        '</a>'
      ].join('');
    }
    //Data events
    window.actionEvents = {
      'click .delete': function(e, value, row, index) {
        $.ajax({
          url: `/${row.file + row.extension}?_method=DELETE`,
          type: 'POST',
          data: { _csrf: '<%= _csrf %>' },
          success: function(response) {
            $('#success').show();
            $('#success').html(response.message);
            $table.bootstrapTable('remove', {
              field: 'id',
              values: [row.id]
            });
          },
          error: function(response) {
            $('#error').show();
            $('#error').html(response.message);
          }
        });
      }
    };
  </script>

  <div
    class="modal fade"
    id="confirm-delete"
    tabindex="-1"
    role="dialog"
    aria-labelledby="confirm-delete"
    aria-hidden="true"
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Remove all uploads</h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-hidden="true"
          >
            &times;
          </button>
        </div>
        <div class="modal-body">
          <p>
            Are you sure you want to delete all of your uploads account, this
            procedure is irreversible.
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">
            Cancel
          </button>
          <a href="/me/uploads/delete/all" class="btn btn-danger btn-ok"
            >Delete uploads</a
          >
        </div>
      </div>
    </div>
  </div>
</div>
