<div class="customTable">
  <div class="table-wrapper">
    <div class="table-title">
      <div class="row">
        <div class="col-xs-12 col-md-6">
          <h2>Your <strong>Tokens</strong></b>
          </h2>
        </div>
        <div class="col-xs-12 col-md-6">
          <a data-toggle="modal" data-target="#confirm-delete" role="button" class="btn btn-danger">Delete
            All</a>
          <a data-toggle="modal" data-target="#create-token" role="button" class="btn btn-success">Create Token</a>
        </div>
      </div>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Created</th>
          <th scope="col">Label</th>
          <th scope="col">Expires</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% const tokensLength = tokens.length; %>
        <% if (!tokens || tokens.length === 0) { %>
        <tr class="text-center">
          <td colspan="4">No Tokens found</td>
        </tr>
        <% } else { %>

        <% for(i = 0; i < tokensLength; i++) { %>
        <tr>
          <td style="width: 25%">
            <%= moment(tokens[i].createdAt).format('MMM Do YYYY hh:mm A') %>

          </td>
          <td>
            <%= tokens[i].label %>
          </td>
          <td>
            <%- tokens[i].isNever ? 'Never Expires' : moment(tokens[i].expireAt).fromNow()  %>
          </td>
          <td>
            <a data-toggle="modal" data-target="#rename-<%= tokens[i].id %>" role="button" class="edit" title="Rename"
              data-toggle="tooltip">
              <i class="fas fa-edit"></i>
            </a>
            <div class="modal fade" id="rename-<%= tokens[i].id %>" tabindex="-1" role="dialog"
              aria-labelledby="rename-<%= tokens[i].id %>" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title">Rename Token</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  </div>
                  <div class="modal-body">
                    <form action="/tokens/<%= tokens[i].id %>?_method=PUT" method="POST" class="mt-2" id="token">
                      <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                      <div class="form-group">
                        <input name="label" type="text" class="form-control" id="label" value="<%= tokens[i].label %>">
                      </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary text-white">Rename</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <form class=" d-inline" action="/tokens/<%= tokens[i].id %>?_method=DELETE" method="POST">
              <input type="hidden" name="_csrf" value="<%= _csrf %>" />
              <button class="delete" title="Delete" data-toggle="tooltip">
                <i class="fas fa-times-circle"></i>
              </button>
            </form>
          </td>
        </tr>
        <% } %>
        <% } %>
      </tbody>
    </table>
  </div>
  <div class="modal fade" id="create-token" tabindex="-1" role="dialog" aria-labelledby="create-token"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Create new token</h5>
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        </div>
        <div class="modal-body">
          <form action="/tokens" method="POST" class="mt-2" id="token">
            <input type="hidden" name="_csrf" value="<%= _csrf %>" />
            <div class="form-group">
              <label for="label">Token Label</label>
              <input name="label" type="text" class="form-control" id="label" value="Default Token Label" required>
            </div>
            <div class="form-group">
              <label for="expire">Expire?</label>
              <select name="expire" class="selectpicker" id="expire" data-style="btn-primary">
                <option value="0" selected>Never</option>
                <option value="1">24 Hours</option>
                <option value="7">A Week</option>
                <option value="30">A Month</option>
              </select>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Create Token</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="comfirmDelete"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Remove all tokens</h5>
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete all your API tokens, this procedure is irreversible.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <a href="/me/uploads/delete/all" class="btn btn-danger btn-ok">Delete tokens</a>
        </div>
      </div>
    </div>
  </div>
</div>
