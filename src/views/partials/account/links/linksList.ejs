<div class="customTable">
  <div class="table-wrapper">
    <div class="table-title">
      <div class="row">
        <div class="col-xs-12 col-md-6">
          <h2>Your <strong>Links</strong>
          </h2>
        </div>
        <div class="col-xs-12 col-md-6">
          <a data-toggle="modal" data-target="#confirm-delete" role="button" class="btn btn-danger">Delete
            All</a>
          <a data-toggle="modal" data-target="#create-link" role="button"
            class="btn btn-success">Create Link</a>
        </div>
      </div>
    </div>
  </div>
 <table class="table table-hover" id="table" data-toggle="table" data-pagination="true" data-id-field="id"
    data-side-pagination="server" data-url="/links-data" data-sort-order="desc" data-page-size="10"
    data-page-list="[10, 25, 50, 100, all]">
      <thead>
        <tr>
          <th data-field="code" data-formatter="codeFormater" scope="col">Shorten</th>
          <th data-field="url" data-formatter="urlFormater" scope="col">Original</th>
          <th data-field="createdAt" data-formatter="createdAtFormater" data-sortable="true" scope="col">Created</th>
          <th data-field="clicks" data-sortable="true" scope="col">Clicks</th>
          <th data-field="tags" data-formatter="tagsFormater" scope="col">Tags</th>
          <th data-field="actions" data-formatter="actionsFormatter" data-events="actionEvents" scope="col">Actions</th>
        </tr>
      </thead>
    </table>
    <script>
      $(document).ready(() => {
        $('#table').bootstrapTable({
          formatNoMatches: function () {
            return 'No links found.'
          }
        });
        $(".clipboard").tooltip({
         placement: "bottom",
         delay: 1000
       });
      });
      const clipboard = new ClipboardJS(".clipboard");

      const $table = $('#table')

      function createdAtFormater(value, row) {
        return moment(value).format('MMM Do YYYY hh:mm A')
      }
      function urlFormater(value, row) {
        return `<a href="${value}" taget="_blank">${value}</a>`
      }
      function codeFormater(value, row) {
        return `<a href="<%= siteURL %>/${value}" taget="_blank">${value}</a>`
      }
      function tagsFormater(value, row) {
        if (value.length > 0) {
          const tags = [];
          value.map(data=>{
            tags.push(
               '<span class="badge badge-primary">',
          data,
          '</span> ',)
          })
          return  tags.join('');
        }
        return 'No Tags';
      }

      function actionsFormatter(value, row, index) {
        return [
          `<a class="link clipboard" id="clip_${row.id}" href="#" data-clipboard-text="<%= siteURL %>/l/${row.code}">`,
          '<i class="fas fa-link"></i>',
          '</a> ',
          '<a class="edit" href="javascript:void(0)" title="Copy link">',
          '<i class="fas fa-edit"></i>',
          '</a> ',
          '<a class="delete" href="javascript:void(0)" title="Delete Upload">',
          ' <i class="fas fa-times-circle"></i>',
          '</a>'
        ].join('')
      }
      //Data events
      window.actionEvents = {
        'click .edit': function (e, value, row, index) {
          $('#edit-link form').attr('action', `/edit/${row._id}?_method=PUT`);
          $('#edit-link').modal('show');
        },
        'click .delete': function (e, value, row, index) {
          $.ajax({
            url: `/links/${row._id}?_method=DELETE`,
            type: 'POST',
            data: { _csrf: '<%= _csrf %>' }, success: function (response) {
              $('#success').show(); $('#success').html(response.message); $table.bootstrapTable('remove', {
                field: 'id',
                values: [row.id]
              })
            }, error: function (response) {
              $('#error').show(); $('#error').html(response.message);
            }
          });
        }
      }
      function setTooltip(message, id) {
        $(`#${id}`)
           .tooltip("hide")
           .attr("data-original-title", message)
           .tooltip("show");
       }
       function hideTooltip(id) {
           $(`#${id}`)
           .tooltip("hide")
       }
       clipboard.on("success", (e) => {
         setTooltip("Copied!", e.trigger.id);
         hideTooltip(e.trigger.id);
       });
       clipboard.on("error", (e) => {
         setTooltip("Failed!");
         hideTooltip(e.trigger.id);
       });
      $('#edit-link').on('hide.bs.modal', function() {
      $(':input', this).val('');
    }); </script>
