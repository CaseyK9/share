                <h5 class="modal-title">Edit link</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
              </div>
              <div class="modal-body">
                <form action="" method="POST" class="mt-2">
                  <input type="hidden" name="_csrf" value="<%= _csrf %>" />
              </div>
