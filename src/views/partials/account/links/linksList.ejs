 <div class="modal fade" id="create-link" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Create shorted link</h5>
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                  <form action="/links" method="POST" class="mt-2" id="links">
                    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                    <div class="form-group">

                    </div>
                    <div class="form-group">
                      <label for="linksLimit">Limit?</label>
                      <select name="linksLimit" class="selectpicker" id="linksLimit" data-style="btn-primary">
                        <option value="0" selected>Never</option>
