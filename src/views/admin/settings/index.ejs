<%- include ('../../partials/header') %> <%- include
('../../partials/admin/navbar') %>

<div class="container mt-3 mb-3">
  <div class="mb-2">
    <%- include ('../../partials/alerts/error') %> <%- include
    ('../../partials/alerts/success') %>
  </div>
</div>
<div class="container">
  <button
    type="button"
    class="btn btn-primary"
    data-toggle="modal"
    data-target="#transfer-ownership"
    style="color: #ffff;"
  >
    Transfer Ownership
  </button>
  <!-- Modal -->
  <div
    class="modal fade"
    id="transfer-ownership"
    tabindex="-1"
    role="dialog"
    aria-labelledby="transferOwnership"
    aria-hidden="true"
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Transfer Ownership</h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-hidden="true"
          >
            &times;
          </button>
        </div>
        <div class="modal-body">
          <p>
            Once the transfer is complate you will be converted to
            <strong>admin</strong> and the user selected will be owner. Be sure you want to do this as the procedure is irreversible
          </p>
          <form action="/admin/settings/transfer" method="POST">
            <div class="form-group mt-2">
            <select class="selectpicker" data-live-search="true" data-width="100%">
              <% users.map(data=>{ %>
                  <option value="<%= data.slug %>"><%= data.username %></option>
              <% }) %>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">
            Cancel
          </button>
            <input type="hidden" name="_csrf" value="<%= _csrf %>" />
            <button class="btn btn-danger btn-ok" style="color: #ffff;">
              Transfer Ownership
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include ('../../partials/footer.ejs') %>
