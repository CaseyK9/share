<% include ../../partials/header %>
<% include ../partials/navbar %>
<div class="container w-75 pt-2">
  <% if (success && success.length > 0){ %>
  <div class="container">
    <div class="alert alert-success" role="alert">
      <%= success %>
    </div>
  </div>
  <% } %>
  <% if (error && error.length > 0){ %>
  <div class="container">
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
  </div>
  <% } %>
  <div class="table-wrapper">
    <div class="table-title">
      <div class="row">
        <div class="col-6">
          <h2>Manage <strong>Users</strong></b>
          </h2>
        </div>
        <div class="col-12 col-sm-6">
          <a role="button" class="btn btn-light text-dark float-right" href="/admin/users/new">Create New User</a>
        </div>
      </div>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Username</th>
          <th scope="col">Role</th>
          <th scope="col">Status</th>
          <th scope="col">Last Activity</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% let usersLength = data.length; %>
        <% let users = data; %>
        <% if (usersLength === 0) { %>
        <tr class="text-center">
          <td colspan=5">No users found</td>
        </tr>
        <% } else { %>

        <% for(i = 0; i < usersLength; i++) { %>
        <tr>
          <td>
            <%= users[i].username %>
          </td>
          <td>
            <%- (users[i].isAdmin) ? 'Admin' : 'User' %>
          </td>
          <td>
            <%- users[i].isBanned ? 'Banned' : users[i].isSuspended ? `Suspended for ${'1 day'}` : users[i].accountActivated ? 'Active' : 'Unactivated' %>
          </td>
          <td>
            <% if(users[i].lastLog) {%>
            <%= moment(users[i].lastLog).format('MMM Do YYYY hh:mm A') %>
            <% } else { %>
            Never Logged In
            <% }%>
          </td>
          <td style="width:15%">
            <a href="/admin/users/<%= users[i].id %>" class="edit" title="Edit" data-toggle="tooltip">
              <i class="fas fa-user-edit"></i>
            </a>
            <a href="/admin/users/<%= users[i].id %>/ban" class="ban" title="Ban" data-toggle="tooltip">
              <i class="fas fa-gavel"></i>
            </a><a href="/admin/users/<%= users[i].id %>/edit/suspend" class="suspend" title="Suspend"
              data-toggle="tooltip">
              <i class="fas fa-pause"></i>
            </a>
            <form class=" d-inline" action="/admin/users/<%= users[i].id %>?_method=DELETE %>" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <button class="delete" title="Delete" data-toggle="tooltip">
                <i class="fas fa-trash"></i>
              </button>
            </form>
          </td>
        </tr>
        <% } %>
        <% } %>
      </tbody>
    </table>
    <% if (pages > 1) { %>
    <ul class="pagination justify-content-center float-none">
      <% if (current == 1) { %>
      <li class="page-item disabled"><a class="page-link" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
          <span class="sr-only">Previous</span>
        </a>
      </li>
      <% } else { %>
      <li class="page-item"><a class="page-link" href="/admin/users/1">First</a></li>
      <% } %>
      <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
      <% if (i !== 1) { %>
      <li class="page-item disabled"><a class="page-link">...</a></li>
      <% } %>
      <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
      <% if (i == current) { %>
      <li class="page-item active"><a class="page-link"><%= i %></a></li>
      <% } else { %>
      <li><a class="page-link" href="/admin/users/<%= i %>"><%= i %></a></li>
      <% } %>
      <% if (i == Number(current) + 4 && i < pages) { %>
      <li class="page-item disabled"><a class="page-link">...</a></li>
      <% } %>
      <% } %>
      <% if (current == pages) { %>
      <li class="page-item disabled"><a class="page-link">Last</a></li>
      <% } else { %>
      <li class="page-item"><a class="page-link" href="/admin/users/<%= pages %>">
          <span aria-hidden="true">&raquo;</span>
          <span class="sr-only">Next</span></a></li>
      <% } %>
    </ul>
    <% } %>
  </div>
</div>
<% include ../../partials/footer %>
