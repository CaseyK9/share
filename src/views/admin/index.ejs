<%- include ('../partials/header') %> <%- include ('../partials/admin/navbar')
%>
<div class="container w-75 mt-3 admin index">
  <div class="mb-3">
    <%- include ('../partials/streamerMode')%> <%- include
    ('../partials/alerts/error') %> <%- include ('../partials/alerts/success')
    %>
  </div>
  <div class="row">
    <div class="col-xl-6 col-sm-6 mb-3">
      <div class="card text-white o-hidden h-100">
        <div class="card-body">
          <div class="card-body-icon">
            <i class="fas fa-fw fa-upload"></i>
          </div>
          <div class="mr-5">
            Total <%= uploads %> Upload<%if(uploads >= 2){%>s<%}%>
          </div>
        </div>
        <a
          class="card-footer text-white clearfix small z-1"
          href="/admin/uploads"
        >
          <span class="float-left"
            >View <%if(uploads >= 2){%>all <%}%> Upload<%if(uploads >=
            2){%>s<%}%></span
          >
          <span class="float-right">
            <i class="fas fa-angle-right"></i>
          </span>
        </a>
      </div>
    </div>
    <div class="col-xl-6 col-sm-6 mb-3">
      <div class="card text-white o-hidden h-100">
        <div class="card-body">
          <div class="card-body-icon r-0">
            <i class="fas fa-fw fa-users"></i>
          </div>
          <div class="mr-5">
            <%= users %> User<%if(users >= 2){%>s<%}%>
          </div>
        </div>
        <a
          class="card-footer text-white clearfix small z-1"
          href="/admin/users"
        >
          <span class="float-left">View User<%if(users >= 2){%>s<%}%></span>
          <span class="float-right">
            <i class="fas fa-angle-right"></i>
          </span>
        </a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xl-4 col-sm-4 mb-3">
      <div class="card text-white o-hidden h-100">
        <div class="card-body">
          <div class="card-body-icon">
            <i class="fas fa-fw fa-upload"></i>
          </div>
          <div class="mr-5">
            <%= images %> Images<%if(uploads >= 2){%>s<%}%>
          </div>
        </div>
        <a
          class="card-footer text-white clearfix small z-1"
          href="/admin/uploads"
        >
          <span class="float-left"
            >View <%if(uploads >= 2){%>all <%}%> Uploads<%if(uploads >=
            2){%>s<%}%></span
          >
          <span class="float-right">
            <i class="fas fa-angle-right"></i>
          </span>
        </a>
      </div>
    </div>
    <div class="col-xl-4 col-sm-4 mb-3">
      <div class="card text-white o-hidden h-100">
        <div class="card-body">
          <div class="card-body-icon r-0">
            <i class="fas fa-fw fa-users"></i>
          </div>
          <div class="mr-5">
            <%= files %> Files<%if(files >= 2){%>s<%}%>
          </div>
        </div>
        <a
          class="card-footer text-white clearfix small z-1"
          href="/admin/uploads"
        >
          <span class="float-left">View User<%if(files >= 2){%>s<%}%></span>
          <span class="float-right">
            <i class="fas fa-angle-right"></i>
          </span>
        </a>
      </div>
    </div>
    <div class="col-xl-4 col-sm-4 mb-3">
      <div class="card text-white o-hidden h-100">
        <div class="card-body">
          <div class="card-body-icon r-0">
            <i class="fas fa-fw fa-users"></i>
          </div>
          <div class="mr-5">
            <%= texts %> Text<%if(texts >= 2){%>s<%}%>
          </div>
        </div>
        <a
          class="card-footer text-white clearfix small z-1"
          href="/admin/uploads"
        >
          <span class="float-left">View User<%if(texts >= 2){%>s<%}%></span>
          <span class="float-right">
            <i class="fas fa-angle-right"></i>
          </span>
        </a>
      </div>
    </div>
  </div>
</div>

