<% include ../partials/header %>
<% include ./partials/navbar %>
<div class="container w-75 pt-5">
  <% errors = error && error.length > 0 %>
  <% if (errors){ %>
  <div class="container">
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
  </div>
  <% } %>
  <div class="row">
    <div class="col-xl-6 col-sm-6 mb-3">
      <div class="card text-white bg-primary o-hidden h-100">
        <div class="card-body">
          <div class="card-body-icon">
            <i class="fas fa-fw fa-file-alt"></i>
          </div>
          <div class="mr-5">
            <%= uploads %> Upload<% if(uploads > 2){ %>s<% }%>
          </div>
        </div>
        <a class="card-footer text-white clearfix small z-1" href="/admin/uploads">
          <span class="float-left">View Uploads</span>
          <span class="float-right">
            <i class="fas fa-angle-right"></i>
          </span>
        </a>
      </div>
    </div>
    <div class="col-xl-6 col-sm-6 mb-3">
      <div class="card text-white bg-primary o-hidden h-100">
        <div class="card-body">
          <div class="card-body-icon">
            <i class="fas fa-fw fa-users"></i>
          </div>
          <div class="mr-5">
            <%= users %> User <% if(users > 2){ %>s<% }%>
          </div>
        </div>
        <a class="card-footer text-white clearfix small z-1" href="/admin/users">
          <span class="float-left">View Users</span>
          <span class="float-right">
            <i class="fas fa-angle-right"></i>
          </span>
        </a>
      </div>
    </div>
  </div>
</div>
<% include ../partials/footer %>
